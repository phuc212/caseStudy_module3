@model CreateCategory
@{
    ViewBag.Title = "Create new category";
    var categories = ViewBag.Categories as List<Category>;
}

<form asp-controller="Category" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    @*<input type="hidden" asp-for="CreateBy" value="@CurrentAccount.Id" />*@
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Tên danh mục</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="CategoryName">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ngày tạo</label>
        <div class="col-sm-10">
            <input type="date" class="form-control" asp-for="CreateAt">
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-2">
            <label asp-for="CategoryImage"></label>
        </div>
        <div class="col-sm-10">
            <div class="custom-file">
                <input class="custom-file-input" value="nonCat.jpg" asp-for="CategoryImage">
                <label class="custom-file-label" asp-for="CategoryImage" for="customFile">Chọn ảnh</label>
                <span asp-validation-for="CategoryImage" class="text-danger"></span>
            </div>
        </div>
    </div>
    @*<div class="form-group row">
            <label class="col-sm-2 col-form-label">Người Tạo</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" readonly value="@CurrentAccount.FullName">
            </div>
        </div>*@
    <button type="submit" class="btn btn-primary mb-2">Tạo Mới</button>
</form>

